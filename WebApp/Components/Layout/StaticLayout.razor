@inherits LayoutComponentBase

@using AnkiBooks.WebApp.Client.Shared.Heroicons

<div class="d-flex flex-column">
    <header class="border-bottom-primary d-flex flex-row justify-content-between align-items-center py-4 px-8">
        <div>
            <NavLink href="" Match="NavLinkMatch.All">Anki Books</NavLink>
        </div>
        <div class="d-flex">
            <AuthorizeView>
                <Authorized>
                    <a class="mr-4" href="Account/Manage">@context.User.Identity?.Name</a>

                    <span>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="" />
                            <button type="submit" class="nav-link">Logout</button>
                        </form>
                    </span>
                </Authorized>
                <NotAuthorized>
                    <a class="mr-4" href="Account/Register">Register</a>

                    <a href="Account/Login">Sign in</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </header>

    <div class="d-flex flex-row">
        <div class="flex-shrink-0 position-sticky left-0 top-0 bottom-0 h-screen w-64 border-right-primary">
            <ul class="d-flex flex-column">
                <li>
                    <a href="articles" class="d-flex align-items-center px-7 py-4 hover-bg-primary">
                        <div class="w-5 h-5 mr-2">
                            <RectangleStack />
                        </div>
                        <div>
                            Articles
                        </div>
                    </a>
                </li>

                <li>
                    <a href="" class="d-flex align-items-center px-7 py-4 hover-bg-primary">
                        <div class="w-5 h-5 mr-2">
                            <BookOpen />
                        </div>
                        <div>
                            Books
                        </div>
                    </a>
                </li>

                <li>
                    <a href="" class="d-flex align-items-center px-7 py-4 hover-bg-primary">
                        <div class="w-5 h-5 mr-2">
                            <ChainLink />
                        </div>
                        <div>
                            Concepts
                        </div>
                    </a>
                </li>

                <li>
                    <a href="" class="d-flex align-items-center px-7 py-4 hover-bg-primary">
                        <div class="w-5 h-5 mr-2">
                            <Users />
                        </div>
                        <div>
                            Groups
                        </div>
                    </a>
                </li>
            </ul>
        </div>

        <div class="w-100">
            @Body
        </div>
    </div>
</div>